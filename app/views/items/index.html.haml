%h1= "#{@item_category.name.pluralize} Listing"

%table
  %thead
    %tr
      %th ID
      - @item_category.item_category_attributes.each do |attribute|
        %th= attribute.label
  %tbody
    - @items.each do |item|
      %tr
        %td= item.id
        - @item_category.item_category_attributes.each do |attribute|
          %td= item.values[attribute.label] unless item.values.nil?
        %td= link_to "View", item
        %td= link_to "Edit", edit_item_path(item)
        %td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }

%hr
= link_to "New", new_item_category_item_path