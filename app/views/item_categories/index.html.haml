%h1 Item Category Listing

%table
  %thead
    %tr
      %th Name
  %tbody
    - @item_categories.each do |category|
      %tr
        %td= category.name
        %td= link_to "View", category
        %td= link_to "Edit", edit_item_category_path(category)
        %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }
        %td= " - "
        %td= link_to "Items", item_category_items_path(category)

%hr
= link_to "New", new_item_category_path

